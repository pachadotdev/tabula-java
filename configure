#!/bin/sh
# This script will query 'pkg-config' for the required cflags and ldflags.
# If pkg-config is unavailable or does not find the library, try setting
# INCLUDE_DIR and LIB_DIR manually via e.g:
# R CMD INSTALL --configure-vars='INCLUDE_DIR=/.../include LIB_DIR=/.../lib'

# Library settings
PKG_CONFIG_NAME="poppler-cpp"
PKG_DEB_NAME="libpoppler-cpp-dev"
PKG_RPM_NAME="poppler-cpp-devel"
PKG_BREW_NAME="poppler"
PKG_TEST_HEADER="<poppler-document.h>"
PKG_LIBS="-lpoppler-cpp"
PKG_CFLAGS="-I/usr/include/poppler/cpp -I/usr/include/poppler"

# Use pkg-config if available
pkg-config --version >/dev/null 2>&1
if [ $? -eq 0 ]; then
  PKGCONFIG_CFLAGS=`pkg-config --cflags --silence-errors ${PKG_CONFIG_NAME}`
  PKGCONFIG_LIBS=`pkg-config --libs ${PKG_CONFIG_NAME}`
fi

# Note that cflags may be empty in case of success
if [ "$INCLUDE_DIR" ] || [ "$LIB_DIR" ]; then
  echo "Found INCLUDE_DIR and/or LIB_DIR!"
  PKG_CFLAGS="-I$INCLUDE_DIR $PKG_CFLAGS"
  PKG_LIBS="-L$LIB_DIR $PKG_LIBS"
elif [ "$PKGCONFIG_CFLAGS" ] || [ "$PKGCONFIG_LIBS" ]; then
  echo "Found pkg-config cflags and libs!"
  PKG_CFLAGS=${PKGCONFIG_CFLAGS}
  PKG_LIBS=${PKGCONFIG_LIBS}
fi

# For debugging
echo "Using PKG_CFLAGS=$PKG_CFLAGS"
echo "Using PKG_LIBS=$PKG_LIBS"

# Find compiler
CXX=`${R_HOME}/bin/R CMD config CXX 2>/dev/null || echo g++`
CPPFLAGS=`${R_HOME}/bin/R CMD config CPPFLAGS 2>/dev/null || echo ""`

# Helper to test whether the compiler accepts a flag
test_flag() {
  flag="$1"
  cat > conftest_flag.cpp <<'EOF'
int main() { return 0; }
EOF
  if ${CXX} ${flag} -c conftest_flag.cpp -o conftest_flag.o ${PKG_CFLAGS} ${CPPFLAGS} >/dev/null 2>&1; then
    rm -f conftest_flag.cpp conftest_flag.o
    return 0
  else
    rm -f conftest_flag.cpp conftest_flag.o
    return 1
  fi
}

# C++ standard detection (must come after test_flag is defined)
CXX_STD="CXX11"  # Default fallback
STD_FLAG="-std=c++11"
if test_flag "-std=c++20"; then
  CXX_STD="CXX20"
  STD_FLAG="-std=c++20"
elif test_flag "-std=c++17"; then
  CXX_STD="CXX17"
  STD_FLAG="-std=c++17"
elif test_flag "-std=c++14"; then
  CXX_STD="CXX14"
  STD_FLAG="-std=c++14"
fi

# Create a temporary C++ file to test the compatibility with Poppler
cat <<EOF > conftest.cpp
#include <poppler-version.h>

int main() {
    poppler::version_string();
    return 0;
}
EOF

# Compile the temporary C++ file to an object file
if ! ${CXX} -std=gnu++11 -c conftest.cpp -o conftest.o ${PKG_CFLAGS} ${CPPFLAGS}
then
    echo "--------------------------- [ANTICONF] --------------------------------"
    echo "Configuration failed to find '$PKG_CONFIG_NAME' system library. Try installing:"
    echo " * rpm: $PKG_RPM_NAME (Fedora, CentOS, RHEL)"
    echo " * brew: $PKG_BREW_NAME (MacOS)"
    echo " * deb: $PKG_DEB_NAME (Debian, Ubuntu, etc)"
    echo "If $PKG_CONFIG_NAME is already installed, check that 'pkg-config' is in your"
    echo "PATH and PKG_CONFIG_PATH contains a $PKG_CONFIG_NAME.pc file. If pkg-config"
    echo "is unavailable you can set INCLUDE_DIR and LIB_DIR manually via:"
    echo "R CMD INSTALL --configure-vars='INCLUDE_DIR=... LIB_DIR=...'"
    echo "-------------------------- [ERROR MESSAGE] ---------------------------"
    cat configure.log 2>/dev/null || true
    echo "--------------------------------------------------------------------"
    rm -rf conftest.cpp conftest.o
    exit 1
else
    rm -rf conftest.cpp conftest.o
fi

# Detect best optimization flag supported by the compiler
OPTFLAGS=""
for flag in -O3 -O2 -O1; do
  echo 'int main() { return 0; }' > opttest.cpp
  if ${CXX} -std=gnu++11 ${flag} -c opttest.cpp -o opttest.o ${PKG_CFLAGS} >/dev/null 2>&1; then
    OPTFLAGS=${flag}
    rm -f opttest.o opttest.cpp
    break
  fi
  rm -f opttest.o opttest.cpp
done
if [ -z "${OPTFLAGS}" ]; then
  OPTFLAGS=-O0
fi

# Write to src/Makevars from template
if [ -f src/Makevars.in ]; then
  sed -e "s|@cflags@|${PKG_CFLAGS}|g" -e "s|@optflags@|${OPTFLAGS}|g" -e "s|@libs@|${PKG_LIBS}|g" src/Makevars.in > src/Makevars
else
  echo "Warning: src/Makevars.in not found; skipping generation of src/Makevars"
fi

# Generate top-level Makefile from Makefile.in if present
if [ -f Makefile.in ]; then
  sed -e "s|@optflags@|${OPTFLAGS}|g" -e "s|@cflags@|${PKG_CFLAGS}|g" -e "s|@stdflag@|${STD_FLAG}|g" Makefile.in > Makefile
  echo "Wrote Makefile from Makefile.in"
else
  echo "Warning: Makefile.in not found; not generating Makefile"
fi

exit 0
